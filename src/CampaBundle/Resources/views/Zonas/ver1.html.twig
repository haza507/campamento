{% extends 'layout.html.twig' %}



{% block body %}
{{ parent()}}
<div class="container">
	<div class="col-md-12">
		<div class="page-header margin-none">
<h2 class="padding-none"> Ver las Zonas</h2>
    	</div>
    	<div class="table-responsive">
  
<table class="table table-striped table-hover">
	<thead>
<tr>
	<th>Id Zona</th>
	<th>Nombre</th>
	<th>Lider</th>
	<th>Acciones</th>
</tr>
	<thead>
<tbody>
{% for zona in zonas %}

<tr>
	<td>{{zona.IdZona}}</td>
	<td>{{zona.Nombre}}</td>
	<td>{{zona.Lider}}</td>
	<td class="actions">
		<a href="mostrar/{{zona.IdZona}}" class = "btn btn-sm btn-info" >Ver</a>
		<a href="editar/{{zona.IdZona}}" class = "btn btn-sm btn-primary" >Editar</a>
		<input onclick="elimina({{zona.IdZona}})"  class="btn btn-sm btn-danger btn-delete"  type="button" value="Eliminar">
		</td>
<tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
</div>
	<script>
function elimina(y) {
	var url =  "eliminar/" + y;
    if (confirm("Confime que desea eliminar") == true) {
		window.location.href= url;
		 	
    } 
}
		
</script>		
{% endblock %}
